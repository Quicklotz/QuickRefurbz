{
  "name": "quickrefurbz-frontend",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:compile": "tsc -p electron/tsconfig.json && node -e \"require('fs').writeFileSync('dist-electron/package.json','{\\\"type\\\":\\\"commonjs\\\"}\\n')\"",
    "electron:dev": "cross-env VITE_ELECTRON=true VITE_API_BASE=https://quickrefurbz.com/api vite build && npm run electron:compile && electron .",
    "electron:build": "cross-env VITE_ELECTRON=true VITE_API_BASE=https://quickrefurbz.com/api vite build && npm run electron:compile",
    "electron:pack": "npm run electron:build && electron-builder --win",
    "electron:pack:mac": "npm run electron:build && electron-builder --mac",
    "electron:publish": "npm run electron:build && electron-builder --win --publish always"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@tabler/icons-react": "^3.36.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/vite": "^4.1.18",
    "clsx": "^2.1.1",
    "electron-updater": "^6.3.0",
    "framer-motion": "^12.34.0",
    "i18next": "^25.8.11",
    "lucide-react": "^0.469.0",
    "mini-svg-data-uri": "^1.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^7.1.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.24",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.7.3",
    "vite": "^6.0.7"
  }
}
