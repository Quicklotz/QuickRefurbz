    "shortcuts": [
        ["QuickRefurbz.exe", "QuickRefurbz"]
    ],
    "checkver": {
        "url": "https://quickrefurbz.com/downloads/latest.json",
        "jsonpath": "$.version"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://quickrefurbz.com/downloads/QuickRefurbz%20Setup%20$version.exe",
                "hash": {
                    "url": "https://quickrefurbz.com/downloads/latest.json",
                    "jsonpath": "$.sha256"
                }
            }
        }
    }
}
