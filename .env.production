# QuickRefurbz Production Configuration
# Copy this to .env on the VPS and update the values

# Database Configuration
DB_TYPE=postgres
PGHOST=localhost
PGPORT=5432
PGDATABASE=quickrefurbz
PGUSER=postgres
PGPASSWORD=your_actual_password_here

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Secret (change this to a secure random string)
JWT_SECRET=quickrefurbz-production-secret-change-me

# Data directory (for any file uploads)
DATA_DIR=/opt/quickrefurbz/data

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@quicklotzwms.com
APP_URL=https://quickrefurbz.com
